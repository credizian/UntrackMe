{
	"manifest_version": 2,
	"name": "UntrackMe",
	"short_name": "UntrackMe",
	"description": "Removes the part of the URLs that is used to track you on the web",
	"icons": {
		"128": "icon-128.png"
	},
	"web_accessible_resources": [
		"icon-128.png"
	],
	"version": "1.2.1",
	"author": "qurb.xyz",
	"homepage_url": "http://qurb.xyz",
	"browser_action": {
		"default_icon" : "icon.png",
		"default_title": "Protecting you from being tracked",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts":[
			"js/background.js"
		]},
	"options_ui": {
	    "page": "options.html",
	    "chrome_style": true
  	},
	"permissions": [
		"*://*/*",
		"webRequest",
		"webRequestBlocking",
		"notifications"
	]
}
